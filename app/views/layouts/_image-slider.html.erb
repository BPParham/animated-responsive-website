
<!--- Start Slider -->
    <%= javascript_include_tag 'jquery.bxslider.min', 'data-turbolinks-track': 'reload' %>

    <div class="slide-wrap">
      <section class="slider">
        <ul class="slider1">
          <li><%= image_tag(src="https://www.w3newbie.com/wp-content/uploads/chest-fly.png") %></li>
          <li><%= image_tag(src="https://www.w3newbie.com/wp-content/uploads/push-ups.png") %></li>
          <li><%= image_tag(src="https://www.w3newbie.com/wp-content/uploads/inside-gym.png") %></li>
          <li><%= image_tag(src="https://www.w3newbie.com/wp-content/uploads/training.png") %></li>
        </ul>
      </section>
